<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:maxHeight="45dp"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/boardId"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:singleLine="false"
        android:text="아이디"
        android:padding="4dp"
        android:background="@drawable/edge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewBoardTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="4dp"
        android:text="제목"
        android:background="@drawable/edge"
        app:layout_constraintStart_toEndOf="@+id/boardId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardContent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="본문"
        android:padding="4dp"
        android:background="@drawable/edge"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/viewBoardTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardCreatedAt"
        android:layout_width="wrap_content"
        android:background="@drawable/edge"
        android:layout_height="30dp"
        android:padding="4dp"
        android:text="날짜"
        app:layout_constraintStart_toEndOf="@+id/boardContent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardCount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="조회수"
        android:padding="4dp"
        android:background="@drawable/edge"
        app:layout_constraintStart_toEndOf="@+id/boardCreatedAt"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>